extends layout
block content
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='/') REST API
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li.active
                    a(href='/') CREATE
                li
                    a(href='/books/') READ
                li
                    a(href='/books/') UPDATE
                li
                    a(href='/books/') DELETE

    .container.top-margin-for-nav(role='main')
    .row
        form#payment.form-horizontal(autocomplete='on', method='POST', action='/books')
            fieldset
                legend Create Operation
                ol
                    li
                        .form-group
                            label.col-sm-6(for='title') Title
                            input#title.form-control.col-sm-6.needs-validation(name='title', type='text', placeholder='First and Last Name', required='required', autofocus='autofocus')
                    li
                        .form-group
                            label.col-sm-6(for='description') Description
                            input#description.form-control.col-sm-6.needs-validation(name='description', type='text', placeholder='Description', required='required')
                    li
                        .form-group
                            label.col-sm-6(for='author') Author
                            input#author.form-control.col-sm-6.col-xs-3.needs-validation(name='author', type='text', placeholder='Author', required='required')

            fieldset
                button(type='submit', id='s') CREATE
