extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='/') REST API
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li
                    a(href='/') CREATE
                li
                    a(href='/books/') READ
                li.active
                    a(href='/books/') UPDATE
                li.active
                    a(href='/books/') DELETE
    table.table.table-bordered.lead
        tr
            td Title: #{book.title}
            td Description: #{book.description}
            td Author: #{book.author}
            td
                a(href='/books/#{book.title}/edit').btn.btn-default.btn-info Update
            td
                form(action='/books/#{book.title}', method='POST')
                    input(type='hidden', name='_method', value='DELETE')
                    button.btn.btn-default.btn-danger Delete
