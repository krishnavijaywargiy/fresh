extends layout
block content
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='/') REST API
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li
                    a(href='/') CREATE
                li.active
                    a(href='/books/') READ
                li
                    a(href='/books/') UPDATE
                li
                    a(href='/books/') DELETE
    h1 All Books
    div.list-group
        each book in books
            div.list-group-item
                p #{book.title} (#{book.description})
                a.btn.btn-default.btn-info(href="/books/#{book.title}") Edit/Update
