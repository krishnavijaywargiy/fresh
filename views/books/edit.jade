extends layout

block content
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='/') REST API
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li
                    a(href='/') CREATE
                li
                    a(href='/books/') READ
                li.active
                    a(href='/books/') UPDATE
                li
                    a(href='/books/') DELETE
    h1.well.lead Edit Book
        form(method='POST' action='/books/#{book.title}')
                input(type='hidden', name='_method', value='PUT')
                div.form-group
                label Title
                input.form-control#title(type='text' name='title', value='#{book.title}')
                div.form-group
                label Description
                input.form-control#description(type='text', name='description', value='#{book.description}')
                div.form-group
                label Author:
                input.form-control#author(type='text', name='author', value='#{book.author}')
                div.form-group
                button.btn.btn-success.btn-lg(type='submit') Update